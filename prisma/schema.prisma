generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  role          Role      @default(OWNER)
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  boats        Boat[]
  sessions      Session[]
  company       Company?  @relation(fields: [companyId], references: [id])
  companyId     String?
  services      Service[]

}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Boat {
id             String  @id @unique @default(cuid())
name           String
image          String?
maxPeople      Int?
user           User?   @relation(fields: [userId], references: [id])
unaviableSlots Slot[]  
userId         String?
events        Event[]
services       Service[]
}

model Slot {
id     String  @id @unique @default(cuid())
from   Float?
to     Float?
boat   Boat?   @relation(fields: [boatId], references: [id])
boatId String?
}

model Canale {
  id        String @id @unique @default(cuid())
  label     String
  events  Event[]
}

model Event {
  id        String @id @unique @default(cuid())
  serviceId String?
  from      Float?
  to        Float?
  people    Int?
  note      String?
  boatId    String
  clientId  String?
  canaleId String?
  companyId String?
  skipperId String?
  statusId String?
  skipper   Personale? @relation(fields: [skipperId], references: [id])
  canale    Canale? @relation(fields: [canaleId], references: [id])
  boat      Boat?   @relation(fields: [boatId], references: [id])
  company   Company?   @relation(fields: [companyId], references: [id])
  client    Client?   @relation(fields: [clientId], references: [id])
  service    Service?   @relation(fields: [serviceId], references: [id])
  status     EventStatusType @default(NONE)
  amount     Float? @default(0)
  statusDetails     String?
}

model Personale {
  id          String @id @unique @default(cuid())
  role        PersonaleRole? @default(COLLABORATOR)
  name        String?
  image       String?
  salary      Float?
  birthday    Float?
  salaryType  SalaryType?  @default(DAY)
  events      Event[]
}

model Client {
  id          String @id @unique @default(cuid())
  name        String?
  email        String?  @unique
  phone        String?
  events      Event[]
}

model Service {
  id        String @id @unique @default(cuid())
  label     String   
  slug     String 
  userId     String 
  boats   Boat[] 
  events Event[] 
  user User @relation(fields: [userId], references: [id]) 
}

enum Role {
  COLLABORATOR
  ADMIN
  OWNER
}

enum PersonaleRole {
  SKIPPER
  ASSISTENT
  COLLABORATOR
  COFOUNDER
  FORNITORE
  ALTRO
}

enum SalaryType {
  HOUR
  DAY
  MONTH
}

enum EventStatusType {
  PAYED
  ADVANCE_PAYMENT
  TO_PAY
  NONE
}


model Company {
id        String @id @unique @default(cuid())
name      String
employees User[]
events Event[]
}